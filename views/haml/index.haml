%doctype
  %html
    %head
      %link{:href => "./stylesheet.css", :rel => "stylesheet", :type => "text/css"}
        %script{:src => "./js/jquery-2.0.3.min.js", :type => "text/javascript"}
        %script{:src => "./js/application.js", :type => "text/javascript"}
    %body
      #wrapper
        #inside-wrapper
          %header
          %aside
            #info_slider
              .heading I N F O
              .menu#info
                = haml(:"/haml/info")
            #settings_slider
              .heading S E T T I N G S
              .menu#settings
                = haml(:"/haml/settings")
          #main
            = haml(:"/haml/main")
          %div{:style => "clear:both;"}
          %footer
            #exits
              = haml(:"/haml/exits")
        %div{:style => "clear:both;"}